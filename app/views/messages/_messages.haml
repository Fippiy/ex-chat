.main__body--box.clearfix{message_id: "#"}
  %li.message-nickname
    / = message.user.nickname
    messageUserName
  %li.message-date
    / = message.created_at.strftime("%Y/%m/%d %H:%M:%S")
    date
  %li.message-text
    / - if message.text.present?
    / = message.text
    message
    / = image_tag message.image.url if message.image.present?
